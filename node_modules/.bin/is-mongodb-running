#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../is-mongodb-running/bin/is-mongodb-running.js" "$@"
else 
  exec node  "$basedir/../is-mongodb-running/bin/is-mongodb-running.js" "$@"
fi
